{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pnpm run build",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-18.x", "python3", "gcc"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm run start:prod",
    "restartPolicyType": "ON_FAILURE"
  }
}